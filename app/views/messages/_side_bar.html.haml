.chat_side
  .side-header
    .side-header_box
      %h3.side-header_box_name
        = current_user.name
      %ul.side-header_box_btns
        %li.side-header_box_btns_edit
          =link_to new_group_path do
            =icon('fas', 'edit')
        %li.side-header_box_btns_new-group
          =link_to edit_user_path(current_user) do
            =icon('fas', 'cog')
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) , class: "group__name" do
          = group.name
        .group__message
          = group.show_last_message
            
